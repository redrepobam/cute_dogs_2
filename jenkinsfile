pipeline {
    
    agent {
        node {
            label 'jenkinsagent'
        }
    }


    triggers {
        pollSCM '*/1 * * * *'
    }

    stages {
 
 
        stage('BUILD'){
            steps {
                echo "hi"
                sh '''
                echo hi
                '''
            }
        }
 
 
        stage('TEST'){
            steps {
                echo "hi"
                sh '''
                echo hi
                '''
            }
        }
 
 
        stage('DEPLOY'){
            steps {
                echo "hi"
                sh '''
                echo hi
                '''
            }
        }
 
 
 
 
    }
}