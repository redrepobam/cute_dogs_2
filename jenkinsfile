pipeline {
    node {
        agent 'jenkinsagent'
    }

    triggers {
        pollSCM '*/1 * * * *'
    }



    stages {


        stage('BUILD'){
            steps{
                echo ' BUILD'
                sh '''
                echo hi
                '''
            }
        }
 
        stage('TEST'){
            steps{
                echo ' TEST '
                sh '''
                echo hi
                '''
            }
        }
 
 
       stage('DEPLOY'){
            steps{
                echo ' DEPLOY '
                sh '''
                echo hi
                '''
            }
        }
 
 

 
    }

}